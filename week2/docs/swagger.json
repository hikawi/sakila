{
    "swagger": "2.0",
    "info": {
        "description": "The Go/Gin backend API for the Sakila database for week 2.",
        "title": "Sakila API Week 2",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:3001",
    "basePath": "/",
    "paths": {
        "/films": {
            "get": {
                "description": "Retrieves a paginated list of films from the database.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "films"
                ],
                "summary": "Get a list of films with pagination",
                "parameters": [
                    {
                        "type": "integer",
                        "default": 1,
                        "description": "Page number (e.g., 1)",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 10,
                        "description": "Items per page (e.g., 10)",
                        "name": "per_page",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully retrieved films",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Invalid query parameters",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "Creates a new film record in the database.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "films"
                ],
                "summary": "Create a new film",
                "parameters": [
                    {
                        "description": "Film data for creation",
                        "name": "film",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/routes.PostFilmBody"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Successfully created the film",
                        "schema": {
                            "$ref": "#/definitions/models.Film"
                        }
                    },
                    "400": {
                        "description": "Invalid input data or missing required fields",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/films/{id}": {
            "get": {
                "description": "Retrieves a single film record from the database using its FilmID.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "films"
                ],
                "summary": "Get a film by ID",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Film ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully retrieved the film",
                        "schema": {
                            "$ref": "#/definitions/models.Film"
                        }
                    },
                    "400": {
                        "description": "Invalid film ID format",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "404": {
                        "description": "Film not found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "delete": {
                "description": "Deletes a single film record from the database using its FilmID.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "films"
                ],
                "summary": "Delete a film by ID",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Film ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Successfully deleted the film (No Content)"
                    },
                    "400": {
                        "description": "Invalid film ID format",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "404": {
                        "description": "Film not found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "patch": {
                "description": "Updates specific fields of an existing film record identified by ID.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "films"
                ],
                "summary": "Update an existing film",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Film ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Film data for partial update (patch)",
                        "name": "film",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/routes.PatchFilmBody"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully updated the film",
                        "schema": {
                            "$ref": "#/definitions/models.Film"
                        }
                    },
                    "400": {
                        "description": "Invalid input data or ID format",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "404": {
                        "description": "Film not found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.Film": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "film_id": {
                    "type": "integer"
                },
                "language": {
                    "$ref": "#/definitions/models.Language"
                },
                "language_id": {
                    "type": "integer"
                },
                "lastUpdate": {
                    "type": "string"
                },
                "length": {
                    "type": "integer"
                },
                "original_language": {
                    "$ref": "#/definitions/models.Language"
                },
                "original_language_id": {
                    "type": "integer"
                },
                "rating": {
                    "type": "string"
                },
                "release_year": {
                    "type": "integer"
                },
                "rental_duration": {
                    "type": "integer"
                },
                "rental_rate": {
                    "type": "number"
                },
                "replacement_cost": {
                    "type": "number"
                },
                "special_features": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "models.Language": {
            "type": "object",
            "properties": {
                "language_id": {
                    "type": "integer"
                },
                "last_updated": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "routes.PatchFilmBody": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "language_id": {
                    "description": "These are foreign keys, can be updated",
                    "type": "integer",
                    "minimum": 1
                },
                "length": {
                    "type": "integer",
                    "minimum": 1
                },
                "original_language_id": {
                    "type": "integer",
                    "minimum": 1
                },
                "rating": {
                    "description": "rating validation remains the same",
                    "type": "string",
                    "enum": [
                        "G",
                        "PG",
                        "PG-13",
                        "R",
                        "NC-17"
                    ]
                },
                "release_year": {
                    "type": "integer",
                    "maximum": 2155,
                    "minimum": 1901
                },
                "rental_duration": {
                    "type": "integer",
                    "minimum": 1
                },
                "rental_rate": {
                    "type": "number"
                },
                "replacement_cost": {
                    "type": "number"
                },
                "special_features": {
                    "description": "special_features uses your custom StringSet type (made optional via the pointer)",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "title": {
                    "description": "ALL FIELDS ARE POINTERS (Optionals)",
                    "type": "string",
                    "maxLength": 255
                }
            }
        },
        "routes.PostFilmBody": {
            "type": "object",
            "required": [
                "language_id",
                "title"
            ],
            "properties": {
                "description": {
                    "description": "OPTIONAL FIELDS",
                    "type": "string"
                },
                "language_id": {
                    "description": "language_id is NOT NULL in DB, so it's required here",
                    "type": "integer",
                    "minimum": 1
                },
                "length": {
                    "type": "integer",
                    "minimum": 1
                },
                "original_language_id": {
                    "description": "Original language is nullable",
                    "type": "integer",
                    "minimum": 1
                },
                "rating": {
                    "description": "rating must be one of the enum values",
                    "type": "string",
                    "enum": [
                        "G",
                        "PG",
                        "PG-13",
                        "R",
                        "NC-17"
                    ]
                },
                "release_year": {
                    "description": "YEAR(4) range",
                    "type": "integer",
                    "maximum": 2155,
                    "minimum": 1901
                },
                "rental_duration": {
                    "description": "rental_duration is NOT NULL and has a default, but still required for clarity",
                    "type": "integer",
                    "minimum": 1
                },
                "rental_rate": {
                    "description": "rental_rate is NOT NULL and has a default",
                    "type": "number"
                },
                "replacement_cost": {
                    "description": "replacement_cost is NOT NULL and has a default",
                    "type": "number"
                },
                "special_features": {
                    "description": "special_features uses your custom StringSet type",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "title": {
                    "description": "REQUIRED FIELDS",
                    "type": "string",
                    "maxLength": 255
                }
            }
        }
    }
}